<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="mbot">

  <!-- Import the macros for inertia and collision matrices -->
  <xacro:include filename="$(find mbot_description)/urdf/xacro/inertia_and_collision_macros.xacro"/>
  <!-- /////////////////////////////////////    COLOR    ///////////////////////////////////////////// -->
  <material name="Black">
      <color rgba="0 0 0 1"/>
  </material>
  <material name="White">
      <color rgba="1 1 1 0.95"/>
  </material>
  <material name="Blue">
      <color rgba="0 0 1 1"/>
  </material>
  <material name="Yellow">
      <color rgba="1 0.4 0 1"/>
  </material>
  <!-- Base link -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.04" radius="0.05"/>
      </geometry>
      <material name="Yellow"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.04" radius="0.05"/>
      </geometry>
    </collision>
    <xacro:cylinder_inertial_matrix m="1.0" r="0.05" h="0.04"/>
  </link>

  <!-- Left wheel link -->
  <link name="left_wheel_link">
    <visual>
      <origin xyz="0 0 0" rpy="1.5707 0 0" />
      <geometry>
        <cylinder radius="0.015" length="0.00625"/>
      </geometry>
      <material name="White"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.5707 0 0" />
      <geometry>
        <cylinder radius="0.015" length="0.00625"/>
      </geometry>
    </collision>
    <xacro:cylinder_inertial_matrix m="0.1" r="0.015" h="0.00625"/>
  </link>

  <joint name="left_wheel_joint" type="continuous">
      <origin xyz="0 0.0475 -0.0125" rpy="0 0 0"/>
      <parent link="base_link"/>
      <child link="left_wheel_link"/>
      <axis xyz="0 1 0"/>
  </joint>
  <!-- Right wheel link -->
  <link name="right_wheel_link">
    <visual>
      <origin xyz="0 0 0" rpy="1.5707 0 0" />
      <geometry>
        <cylinder radius="0.015" length="0.00625"/>
      </geometry>
      <material name="White"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.5707 0 0" />
      <geometry>
        <cylinder radius="0.015" length="0.00625"/>
      </geometry>
    </collision>
    <xacro:cylinder_inertial_matrix m="0.1" r="0.015" h="0.00625"/>
  </link>

  <joint name="right_wheel_joint" type="continuous">
      <origin xyz="0 -0.0475 -0.0125" rpy="0 0 0"/>
      <parent link="base_link"/>
      <child link="right_wheel_link"/>
      <axis xyz="0 1 0"/>
  </joint>
  <!-- Front caster link -->
  <link name="front_caster_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <sphere radius="0.00375"/>
      </geometry>
      <material name="Black"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <sphere radius="0.00375"/>
      </geometry>
    </collision>
    <xacro:sphere_inertial_matrix m="0.05" r="0.00375"/>
  </link>

  <joint name="front_caster_joint" type="fixed">
      <origin xyz="0.045 0 -0.02375" rpy="0 0 0"/>
      <parent link="base_link"/>
      <child link="front_caster_link"/>
  </joint>
  <!-- Back caster link -->
  <link name="back_caster_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <sphere radius="0.00375"/>
      </geometry>
      <material name="Black"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <sphere radius="0.00375"/>
      </geometry>
    </collision>
    <xacro:sphere_inertial_matrix m="0.05" r="0.00375"/>
  </link>

  <joint name="back_caster_joint" type="fixed">
      <origin xyz="-0.045 0 -0.02375" rpy="0 0 0"/>
      <parent link="base_link"/>
      <child link="back_caster_link"/>
  </joint>  

  <gazebo>
    <plugin name="differential_drive_controller" filename="libgazebo_ros_diff_drive.so">
      <updateRate>100</updateRate>
      <legacyMode>false</legacyMode>
      <leftJoint>left_wheel_joint</leftJoint>
      <rightJoint>right_wheel_joint</rightJoint>
      <publishWheelTF>true</publishWheelTF>
      <publishWheelJointState>true</publishWheelJointState>
      <robotNamespace>/mbot</robotNamespace>
      <commandTopic>cmd_vel</commandTopic>
      <publishOdom>true</publishOdom>
      <odometryTopic>odom</odometryTopic>
      <odometryFrame>odom</odometryFrame>
      <odometrySource>1</odometrySource>
      <robotBaseFrame>base_link</robotBaseFrame>
      <wheelSeparation>0.095</wheelSeparation>
      <wheelDiameter>0.03</wheelDiameter>
      <wheelAcceleration>1.0</wheelAcceleration>
      <wheelTorque>10.0</wheelTorque>
    </plugin>
  </gazebo>
</robot>
