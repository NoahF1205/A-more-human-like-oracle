<launch>\
    <arg name="cam_x1" default="0"/>
    <arg name="cam_y1" default="0"/>
    <arg name="cam_z1" default="0"/>
    <arg name="camera_package_name" default="camera" />
    <arg name="camera_name" default="usb_camera" />

    <!-- <include file="$(find kortex_gazebo)/launch/spawn_kortex_robot.launch">
        <arg name = "arm" value = "gen3"/>
        <arg name = "gripper" value = "robotiq_2f_140"/>
    </include> -->
    <!-- Load the URDF into the ROS Parameter Server -->
    <param name="$(arg camera_package_name)_description" command="$(find xacro)/xacro --inorder '$(find camera_description)/urdf/camera_gazebo.xacro'"/>    
    <node name="joint_state_publisher" pkg="joint_state_publisher_gui" type="joint_state_publisher_gui" />
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />
    <node name="rviz" pkg="rviz" type="rviz" />
    <!-- Run Gazebo and load the robot world -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="paused" value="false"/>
        <arg name="use_sim_time" value="true"/>
        <arg name="gui" value="true"/>
        <arg name="headless" value="false"/>
        <arg name="debug" value="false"/>
    </include>

    <!-- Spawn your camera in Gazebo -->
    <node name="$(arg camera_package_name)_spawner" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen" 
        args="-urdf -model $(arg camera_name) -param $(arg camera_package_name)_description -x $(arg cam_x1) -y $(arg cam_y1) -z $(arg cam_z1) -robot_namespace $(arg camera_package_name)"/>
    <!-- </group> -->
</launch>